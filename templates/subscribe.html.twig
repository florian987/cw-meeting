{% extends 'base.html.twig' %}

{% block body %}
  {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
  <div class="row">
    <div class="col-lg-6 col-lg-offset-3">
      <div class="panel registration-form">
        <div class="panel-body">
          <div class="text-center">
            <h4 class="content-group-lg">Inscription Meeting Coasters World - 21 avril 2018</h4>
            {% if not form.vars.valid %}
              <div class="alert alert-danger alert-styled-left alert-bordered">
                <span class="text-semibold">Votre inscription contient une erreur.</span>
              </div>
            {% endif %}
          </div>
          {{ form_errors(form) }}
          <fieldset class="content-group">
            <legend class="text-bold">Infos personnelles</legend>

            <div class="row">
              <div class="form-group">
                <div class="col-md-6">
                  {{ form_row(form.firstname) }}
                </div>
                <div class="col-md-6">
                  {{ form_row(form.name) }}
                </div>
              </div>
            </div>
            <div class="row">
              <div class="form-group">
                <div class="col-md-6">
                  {{ form_row(form.pseudo) }}
                </div>
                <div class="col-md-6">
                  {{ form_row(form.phoneNumber) }}
                </div>
              </div>
            </div>
            <div class="row">
              <div class="form-group">
                <div class="col-md-6">
                  {{ form_row(form.email.first) }}
                </div>
                <div class="col-md-6">
                  {{ form_row(form.email.second) }}
                </div>
              </div>
            </div>
          </fieldset>
          <fieldset class="content-group">
            <legend class="text-bold">Tickets (optionnel)</legend>
            <div class="form-group{% if form.ticketNumber.vars.errors|length > 0 %} has-error{% endif %}">
              {{ form_label(form.ticketNumber, null, {'label_attr': {'class': 'col-md-6'}}) }}
              <div class="col-md-6">
                {{ form_widget(form.ticketNumber) }}
                {{ form_errors(form.ticketNumber) }}
              </div>
            </div>
          </fieldset>
          <fieldset class="content-group">
            <legend class="text-bold">Covoiturage (optionnel)</legend>
            <div class="form-group{% if form.originCity.vars.errors|length > 0 %} has-error{% endif %}">
              {{ form_label(form.originCity, null, {'label_attr': {'class': 'col-md-6'}}) }}
              <div class="col-md-6">
                {{ form_widget(form.originCity) }}
                {{ form_errors(form.originCity) }}
              </div>
            </div>
            <div class="form-group{% if form.seats.vars.errors|length > 0 %} has-error{% endif %}">
              {{ form_label(form.seats, null, {'label_attr': {'class': 'col-md-6'}}) }}
              <div class="col-md-6">
                {{ form_widget(form.seats) }}
                {{ form_errors(form.seats) }}
              </div>
            </div>
          </fieldset>
          <div class="text-right">
            {{ form_widget(form.save, {'attr': {'class': 'btn bg-primary-400 ml-10'}}) }}
          </div>
        </div>
      </div>
    </div>
  </div>
  {{ form_rest(form) }}
  {{ form_end(form) }}
{% endblock %}